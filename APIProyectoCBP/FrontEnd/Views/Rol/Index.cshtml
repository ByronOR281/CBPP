@model IEnumerable<FrontEnd.Models.RolViewModel>

@{
    ViewData["Title"] = "Lista de roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
    </div>
</section><!-- End Breadcrumbs -->
</main><!-- End #main -->


<h1>Lista de roles</h1>

<p>
    <a asp-action="Create">Agregar un nuevo rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescRol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescRol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdRol  }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdRol }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.IdRol  })
            </td>
        </tr>
}
    </tbody>
</table>
